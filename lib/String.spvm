package String {
  has capacity : long;
  has byte_length : long;
  has message : byte[];
  
  sub new ($byte_string : byte[]) : String {
    
    my $string = malloc String;
    $string{capacity} = @$byte_string;
    $string{byte_length} = $string{capacity};
    $string{message} = malloc byte[$string{byte_length}];
    for (my $i = 0; $i < $string{byte_length}; $i++) {
      $string{message}[$i] = $byte_string[$i];
    }
    
    return $string;
  }
}
